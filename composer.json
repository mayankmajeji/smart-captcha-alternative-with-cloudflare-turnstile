{
	"name": "mayankmajeji/plugin-infrastructure",
	"description": "Reusable infrastructure relating to testing, building, and deploying my WordPress plugins",
	"license": "MIT",
	"type": "wordpress-plugin",
	"authors": [
		{
			"name": "MayankMajeji",
			"homepage": "https://mayankmajeji.com/"
		}
	],
	"homepage": "https://github.com/mayankmajeji/plugin-infrastructure/",
	"support": {
		"issues": "https://github.com/mayankmajeji/plugin-infrastructure/issues",
		"forum": "https://wordpress.org/support/plugin/plugin-infrastructure",
		"source": "https://github.com/mayankmajeji/plugin-infrastructure"
	},
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/mayankmajeji"
		}
	],
	"require": {
		"php": ">=7.4.0",
		"composer/installers": "^1.0 || ^2.0"
	},
	"require-dev": {
		"codeception/module-asserts": "^1.0",
		"codeception/module-db": "^1.0",
		"codeception/module-webdriver": "^1.0",
		"codeception/util-universalframework": "^1.0",
		"dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
		"johnbillion/plugin-infrastructure": "dev-trunk",
		"johnbillion/wp-compat": "0.2.3",
		"lucatume/wp-browser": "3.2.1",
		"phpcompatibility/phpcompatibility-wp": "2.1.5",
		"phpstan/phpstan": "1.12.6",
		"phpstan/phpstan-deprecation-rules": "1.2.1",
		"phpstan/phpstan-phpunit": "1.4.0",
		"squizlabs/php_codesniffer": "3.10.3",
		"szepeviktor/phpstan-wordpress": "1.3.5",
		"wp-coding-standards/wpcs": "^3.1"
	},
	"bin": [
		"bin/acceptance-tests",
		"bin/build-vendor",
		"bin/integration-tests",
		"bin/tests-destroy",
		"bin/tests-start",
		"bin/tests-stop"
	],
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"roots/wordpress-core-installer": true
		},
		"disable-tls": true,
		"secure-http": false
	},
	"scripts": {
		"format": "php vendor/bin/phpcbf --standard=phpcs.xml.dist .",
		"lint": [
			"phpcs -d memory_limit=512M -nps --colors --report-code --report-summary --report-width=80 --cache=tests/cache/phpcs.json --basepath=. ."
		],
		"build-vendor": [
			"bash bin/build-vendor"
		],
		"test": [
			"@composer validate --strict --no-check-lock",
			"@test:phpstan",
			"@test:phpcs"
		],
		"test:acceptance": [
			"npm run gulp:styles",
			"acceptance-tests"
		],
		"test:destroy": [
			"tests-destroy"
		],
		"test:integration": [
			"integration-tests"
		],
		"test:phpcs": [
			"phpcs -d memory_limit=512M -nps --colors --report-code --report-summary --report-width=80 --cache=tests/cache/phpcs.json --basepath=. . --error-severity=0"
		],
		"test:phpstan": [
			"codecept build",
			"phpstan analyze -v --memory-limit=1024M includes"
		],
		"test:plugin-check": [
			"@php -r \"if (file_exists('../../../../wp-cli.phar')) { passthru('php ../../../../wp-cli.phar plugin check turnstilewp/turnstilewp.php --require=../../plugin-check/cli.php'); } else { echo 'WP-CLI not found. Install WP-CLI or run: wp plugin check turnstilewp/turnstilewp.php --require=wp-content/plugins/plugin-check/cli.php'; exit(1); }\""
		],
		"test:start": [
			"tests-start"
		],
		"test:stop": [
			"tests-stop"
		]
	},
	"repositories": {
		"packagist": {
			"type": "composer",
			"url": "https://repo.packagist.org"
		}
	},
	"autoload": {
		"psr-4": {
			"TurnstileWP\\": "includes/",
			"TurnstileWP\\Integrations\\": "integrations/"
		}
	}
}
